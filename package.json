{
  "scripts": {
    "dev": "npm-run-all eleventy tailwind",
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./src/styles.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./src/styles.css --minify && npx @11ty/eleventy",
    "eleventy": "npx @11ty/eleventy --serve"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.13",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.0.4",
    "postcss": "^8.5.1"
  }
}
